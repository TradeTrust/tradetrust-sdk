{
  "name": "@tianhr/hedera-document-store",
  "version": "0.0.3-development",
  "files": [
    "dist",
    "src",
    "scripts",
    "truffle-config.js"
  ],
  "main": "dist/index.js",
  "types": "dist/ts/index.d.ts",
  "repository": "",
  "author": "tianhr",
  "license": "Apache-2.0",
  "scripts": {
    "build:sol": "truffle build",
    "build:js:copy-src": "babel src -d dist --ignore src/**/*.spec.ts,src/**/*.test.ts -x .js,.ts,.tsx --copy-files",
    "build:js": "tsc --emitDeclarationOnly && npm run build:js:copy-src",
    "build": "npm run clean:build && npm run build:sol && npm run typechain && npm run build:js",
    "clean:build": "rm -rf ./dist && rm -rf build && rm -rf ./src/contracts/build",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "lint:js": "eslint . --ext .js",
    "lint:js:fix": "eslint . --ext .js --fix",
    "lint:sol": "./node_modules/.bin/solhint contracts/**/*.sol",
    "lint:sol:fix": "./node_modules/.bin/prettier --write contracts/**/*.sol",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "test:sol": "truffle test",
    "test:js": "jest --testPathPattern=src",
    "test:dist": "jest --testPathPattern=src",
    "test": "npm run test:sol && npm run test:js",
    "truffle": "truffle",
    "benchmark": "truffle test ./benchmark/*",
    "typechain": "copy ./build/contracts/*.json ./src/contracts/build",
    "postinstall": "node scripts/postInstall",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "testEnvironment": "jest-environment-uint8array",
    "testTimeout": 100000,
    "globalSetup": "./jest/setup.ts",
    "globalTeardown": "./jest/teardown.ts",
    "testPathIgnorePatterns": [
      "/node_modules",
      "/build",
      "/dist"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.16",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@commitlint/prompt": "^12.1.1",
    "@ls-age/commitlint-circle": "1.0.0",
    "@opengsn/gsn": "^2.1.0",
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@types/jest": "^26.0.23",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^4.2.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "ethers": "^5.1.4",
    "ganache-cli": "^6.12.2",
    "git-cz": "^4.7.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "semantic-release": "^17.4.2",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solium": "^1.2.5",
    "truffle": "^5.3.3",
    "@hashgraph/sdk": "^2.1.0",
    "jest-environment-uint8array": "^1.0.0",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
